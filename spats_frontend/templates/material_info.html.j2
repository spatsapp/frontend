{% extends "base.html.j2" %}

{% block nav %}
    <hr />
    <div>
        |<a href="/{{material}}/{{document['_id']}}">{{material|title}} Info</a>
        |<a href="/{{material}}/{{document['_id']}}/edit">Edit {{material|title}}</a>
        |
    </div>
    <hr />
{% endblock %}

{% block content %}
    <div>
    <a href="/{{material}}/{{document['_id']}}"><h2 class="row">{{document['primary']}}</h2></a> 
    <a href="/{{symbolic}}/{{document['type']}}"><h4 class="row">({{document['symbolic']}})</h4></a>
    </div>
    <table>
        {% for key, value in document.fields %}
            <tr><td class="key"><b>{{key}}</b></td><td>{{value}}</td></tr>
        {% endfor %}
    </table>
{% endblock %}
