{% extends "base.html.j2" %}
{% from "macro_symbolic_form.html.j2" import symbolic_form %}

{% block css %}
    <link rel="stylesheet" href="/static/form.css">
{% endblock css %}

{% block js %}
    <script type="text/javascript" src="/static/symbolic_form.js" defer></script>
{% endblock js %}

{% block content %}
    <form action="/{{symbolic}}/{{document['_id']}}/edit" method="POST">
        {{ symbolic_form(symbolic, document, 'Update '~document["name"] ) }}
    </form>
{% endblock %}